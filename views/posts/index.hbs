<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <li class="post">{{this.message}}<br>
    {{this.date}}
    <button id="likes" type="submit" onclick="addLike('{{this.id}}');document.location.reload(true);">Like</button>
    <div id="like_count">{{this.likes}}</div>

  </li>
  {{/each}}
</ul>

{{!-- added 2 functions to onclick. 1st function described in the script, 2nd function is inline code to reload page --}}

<script>
function addLike(id)  {
    const b = {
      id: id
    }
    console.log(id)
    fetch("/posts/update", { body: JSON.stringify(b), method: "PUT", headers: { 'Content-Type': 'application/json' } });
  }
</script>
